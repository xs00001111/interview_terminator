{
  "name": "test_google_transcribe",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron .",
    "server": "node server.js",
    "electron": "electron .",
    "dev": "concurrently \"npm run server\" \"npm run electron\"",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "dist:mac": "electron-builder --mac",
    "dist:win": "electron-builder --win",
    "dist:linux": "electron-builder --linux",
    "clean": "rm -rf dist"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "A desktop application for transcribing and analyzing conversations using Google Cloud Speech and AI services",
  "dependencies": {
    "@google-cloud/speech": "^6.7.1",
    "@google/generative-ai": "^0.24.0",
    "@material-icons/font": "^1.0.36",
    "chalk": "^4.1.2",
    "dotenv": "^16.4.7",
    "fs": "^0.0.1-security",
    "google-gax": "^4.4.1",
    "node-record-lpcm16": "^1.0.1",
    "openai": "^4.87.3",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron": "^35.0.0",
    "electron-builder": "^25.1.8",
    "electron-notarize": "^1.2.2"
  },
  "build": {
    "appId": "com.yourcompany.conversationhelper",
    "productName": "Interview-Helper",
    "afterSign": "electron-builder.js",
    "asar": true,
    "asarUnpack": ["node_modules/**/*"],
    "extraResources": [
      {
        "from": ".env",
        "to": ".env"
      }
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility"
    },
    "files": [
      "**/*",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}"
    ]
  }
}
